@{
    ViewData["Title"] = "Project Dashboard";
}

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #4f46e5, #0ea5e9);
        color: #fff;
        border-radius: 1.5rem;
        padding: 4rem 2rem;
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    /* Feature Cards */
    .feature-card {
        border: none;
        border-radius: 1.25rem;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(8px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: #eef2ff;
        color: #4f46e5;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin: 0 auto 1rem;
    }

    /* Buttons */
    .btn-modern {
        padding: 0.75rem 1.75rem;
        border-radius: 999px;
        font-weight: 600;
    }

    footer small {
        opacity: 0.7;
    }
</style>

<div class="container my-5">

    <!-- Hero Section -->
    <div class="hero text-center mb-5">
        <h1 class="display-5 fw-bold mb-3">
            Project Management System
        </h1>
        <p class="lead mb-4">
            A modern ASP.NET Core platform to create, manage, and track projects efficiently.
        </p>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a class="btn btn-light btn-modern" href="/Home/Create">
                ➕ Create New Project
            </a>
            <a class="btn btn-outline-light btn-modern" href="/Project">
                📋 View Projects
            </a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="card feature-card h-100 p-4">
                <div class="feature-icon">📁</div>
                <h5 class="fw-semibold">Project Creation</h5>
                <p class="text-muted mt-2">
                    Create and manage projects with timelines, ownership, and status tracking.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card feature-card h-100 p-4">
                <div class="feature-icon">✅</div>
                <h5 class="fw-semibold">Task Tracking</h5>
                <p class="text-muted mt-2">
                    Assign tasks, monitor progress, and meet deadlines with ease.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card feature-card h-100 p-4">
                <div class="feature-icon">📊</div>
                <h5 class="fw-semibold">Reports & Analytics</h5>
                <p class="text-muted mt-2">
                    Gain insights through performance reports and completion analytics.
                </p>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5">
        <small class="text-muted">
            Built with ASP.NET Core MVC · Clean Architecture · Secure & Scalable
        </small>
    </footer>

</div>
